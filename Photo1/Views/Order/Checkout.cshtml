@model Order

<h3 class="text-center">You are just one step away from ordering your photos.</h3>

<div class="row orderForm ">

    <div asp-validation-summary="All"></div>

    <form asp-action="CheckOut" method="post" class="form-horizontal" role="form">
        <div class="form-group">
            <label asp-for="FirstName" class="col-sm-6 control-label"></label>
            <div class="col-sm-12">
                <input asp-for="FirstName" class="form-control-sm" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="LastName" class="col-sm-6 control-label"></label>
            <div class="col-sm-12">
                <input asp-for="LastName" class="form-control-sm" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="AddressLine1" class="col-sm-8 control-label"></label>
            <div class="col-md-12">
                <input asp-for="AddressLine1" class="form-control-sm" />
                <span asp-validation-for="AddressLine1" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="AddressLine2" class="col-md-8 control-label"></label>
            <div class="col-md-12">
                <input asp-for="AddressLine2" class="form-control-sm" />
                <span asp-validation-for="AddressLine2" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="City" class="col-md-6 control-label"></label>
            <div class="col-md-12">
                <input asp-for="City" class="form-control-sm" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Country" class="col-md-2 control-label"></label>
            <div class="col-md-12">
                <input asp-for="Country" class="form-control-sm" />
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="PhoneNumber" class="col-md-8 control-label"></label>
            <div class="col-md-12">
                <input asp-for="PhoneNumber" class="form-control-sm" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Email" class="col-md-2 control-label"></label>
            <div class="col-md-12">
                <input asp-for="Email" class="form-control-sm" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="CreditCard" class="col-md-2 control-label"></label>
            <div class="col-md-12">
                <input asp-for="CreditCard" class="form-control-sm" />
                <span asp-validation-for="CreditCard" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="SecurityCode" class="col-md-8 control-label"></label>
            <div class="col-md-12">
                <input asp-for="SecurityCode" class="form-control-sm" />
                <span asp-validation-for="SecurityCode" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="btn-group col-md-offset-2 col-md-8">

                <input class="btn btn-info" type="submit" value="Complete order" />
                <a class="btn btn-info btn-cart" asp-area="" asp-controller="ShoppingCart" asp-action="Index">Cart</a>
                @*<input class="btn btn-default" type="submit" value="Return " />*@
            </div>
        </div>

    </form>
</div>