@model IEnumerable<Photo1.Models.Photo>
@{
    ViewData["Title"] = "Gallery";
}

<p>
    <h1> The Gallery</h1>
</p>

<div class="container">
    <div class="row">
        <p>
            @foreach (var photo in Model)
            {
                <div class="col-sm-12 col-md-6 col-lg-4">     
                    <div class="gallery">
                       
                        <div class="flex-row">
                            <div class="thumbnail">
                                <a asp-controller="Home" asp-action="ViewDetails"
                                   asp-route-id="@photo.PhotoId">
                                    <img class="card-img-top gallery_image" src="@photo.PhotoUrl" alt="@photo.Title" />
                                </a>
                            </div>
                            <a class="gallery_link" asp-controller="Home" asp-action="ViewDetails"
                               asp-route-id="@photo.PhotoId">
                                <h4 style="color:black">
                                    @Html.DisplayFor(modelItem => photo.Title)
                                </h4>
                            </a>
                        </div>
                        
                        <div class="caption">
                            <h5 class="pull-right">@photo.Price.ToString("c")</h5>
                        </div>
                    </div>
                        
                </div>
            }
        </p>
    </div>
</div>

