@model Photo1.Models.Photo

@{
    ViewData["Title"] = "ViewDetails";
}

<h1>@Html.DisplayFor(model => model.Title)</h1>

<div>
    <hr />
    <div class="detail_container">
        <img src="@Model.PhotoUrl" alt="@Model.Title" class="img-responsive detail_image" style="width:100%" />
    </div>
    

    <hr />

    <dl class="row">
       
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dd>
            <a asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-photoId="@Model.PhotoId" class="btn btn-info" role="button">Add To Cart</a>
            <a asp-controller="Home" asp-action="Gallery" class="btn btn-info" role="button">Return To Gallery</a>
        </dd>
    </dl>
</div>
